{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "GS Flux Desktop",
  "version": "0.1.0",
  "identifier": "com.splatt.gs-flux-desktop",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm nuxt dev --port 1420",
    "beforeBuildCommand": "pnpm nuxi build && pnpm nuxt generate"
  },
  "app": {
    "windows": [
      {
        "title": "GS Flux Desktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
